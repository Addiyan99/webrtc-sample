<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Application Theme -->
    <style name="Theme.WebRTCQRDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <item name="android:colorBackground">@color/surface</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/primary</item>
        
        <!-- Window flags for fullscreen activities -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Dark Theme for Video Call Activity -->
    <style name="Theme.WebRTCQRDemo.VideoCall" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/surface_dark</item>
        <item name="colorPrimaryVariant">@color/surface_dark_variant</item>
        <item name="colorOnPrimary">@color/text_on_dark</item>
        
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_on_dark</item>
        
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/text_on_dark</item>
        
        <!-- Make it fullscreen -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Immersive flags -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Theme for Incoming Call Activity -->
    <style name="Theme.WebRTCQRDemo.IncomingCall" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_on_dark</item>
        
        <item name="colorSecondary">@color/accent</item>
        <item name="colorError">@color/error</item>
        
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_on_dark</item>
        
        <item name="android:colorBackground">@color/surface_dark</item>
        <item name="colorOnBackground">@color/text_on_dark</item>
        
        <!-- Status and navigation bars -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/surface_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Show over lock screen -->
        <item name="android:windowShowWallpaper">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Custom Button Styles -->
    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/accent</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="AppButton.Outline" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/accent</item>
        <item name="backgroundTint">@color/surface_variant</item>
        <item name="strokeColor">@color/accent</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Text Input Styles -->
    <style name="AppEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>