<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="48dp"
            android:layout_marginTop="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="32sp"
                android:textColor="@color/text_primary"
                android:textStyle="normal"
                android:fontFamily="sans-serif-light"
                android:layout_marginBottom="8dp" />

            <View
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:background="@color/accent"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ready to connect"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="sans-serif"
                android:gravity="center" />

        </LinearLayout>

        <!-- Main Content Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- User ID Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your ID"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="32dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dp"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="@color/accent"
                        app:hintTextColor="@color/text_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etMyUserId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter your user ID"
                            android:inputType="text"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint"
                            android:fontFamily="sans-serif" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSaveUserId"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/accent"
                        app:cornerRadius="12dp"
                        app:elevation="0dp"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Call Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Make a Call"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dp"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="@color/accent"
                        app:hintTextColor="@color/text_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTargetUserId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter user ID to call"
                            android:inputType="text"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint"
                            android:fontFamily="sans-serif" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCallUser"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:text="Call"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/success"
                        app:cornerRadius="12dp"
                        app:elevation="0dp"
                        android:enabled="false"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- QR Code Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QR Code Options"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-medium" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStartCall"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/start_call"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/accent"
                    app:cornerRadius="12dp"
                    app:elevation="0dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-medium"
                    app:icon="@android:drawable/ic_menu_camera"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScanQR"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/scan_qr"
                    android:textColor="@color/accent"
                    android:backgroundTint="@color/surface_variant"
                    app:cornerRadius="12dp"
                    app:elevation="0dp"
                    android:fontFamily="sans-serif-medium"
                    app:strokeColor="@color/accent"
                    app:strokeWidth="1dp"
                    app:icon="@android:drawable/ic_menu_search"
                    app:iconGravity="textStart" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- QR Display Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/qrContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/qrTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/offer_qr_title"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:id="@+id/qrCodeImage"
                        android:layout_width="280dp"
                        android:layout_height="280dp"
                        android:padding="12dp"
                        android:contentDescription="QR Code"
                        android:scaleType="fitCenter" />

                </androidx.cardview.widget.CardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDismissQR"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Close"
                    android:textColor="@color/text_secondary"
                    android:backgroundTint="@color/surface_variant"
                    app:cornerRadius="24dp"
                    app:elevation="0dp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>